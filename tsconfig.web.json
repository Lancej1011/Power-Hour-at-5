{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "vite-plugin-pwa/client"]
  },
  "include": [
    "src/**/*",
    "vite.config.web.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-web",
    "dist-electron",
    "main.cjs",
    "preload.cjs",
    "src/**/*.electron.ts",
    "src/services/updateService.ts",
    "src/services/versionService.ts",
    "src/utils/ytDlpTest.ts",
    "src/test-collaboration-fixes.ts",
    "src/utils/adminSetup.ts",
    "src/utils/collaborationTest.ts",
    "src/utils/sessionDemo.ts",
    "src/utils/sessionPersistenceTest.ts",
    "src/utils/ratingSystemTest.ts",
    "src/utils/musicDiscoveryDebug.ts"
  ]
}
